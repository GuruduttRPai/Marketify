<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get All Products in Order</title>
</head>
<body>
    <h2>Get All Products in Order</h2>
    <form id="getAllProductsInOrderForm">
        <label for="OrdId">Order ID:</label>
        <input type="text" id="OrdId" name="OrdId" required><br><br>
        <button type="submit">Get Products</button>
    </form>
    <div id="productsList"></div>

    <script>
        const form = document.getElementById("getAllProductsInOrderForm");
        const productsList = document.getElementById("productsList");

        form.addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const formData = new FormData(this);
            const ordId = formData.get('OrdId'); // Get the Order ID from form data

            try {
                const response = await fetch(`http://localhost:3000/getAllProductInOrder`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ OrdId: ordId }) // Send Order ID in JSON format
                });

                if (!response.ok) {
                    throw new Error('Failed to fetch products in order');
                }

                const products = await response.json();
                displayProducts(products); // Call a function to display products
            } catch (error) {
                console.error('Error:', error.message);
                alert('Failed to fetch products in order. Please try again later.');
            }
        });

        function displayProducts(products) {
            productsList.innerHTML = ''; // Clear previous content
            
            products.forEach(product => {
                const productElement = document.createElement('div');
                productElement.innerHTML = `
                    <p>Product ID: ${product.ProId}</p>
                    <!-- Add more product details as needed -->
                    <hr>
                `;
                productsList.appendChild(productElement);
            });
        }
    </script>
</body>
</html>
