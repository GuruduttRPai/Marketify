<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product to Order</title>
</head>
<body>
    <h2>Add Product to Order</h2>
    <form id="addProductForm">
        <label for="OrdId">Order ID:</label>
        <input type="text" id="OrdId" name="OrdId" required><br><br>

        <label for="ProId">Product ID:</label>
        <input type="text" id="ProId" name="ProId" required><br><br>

        <button type="submit">Add Product to Order</button>
    </form>

    <script>
        const form = document.getElementById("addProductForm");

        form.addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const formData = new FormData(this);
            const requestData = {};
            formData.forEach((value, key) => {
                requestData[key] = value;
            });

            try {
                const response = await fetch('http://localhost:3000/addProductToOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestData)
                });

                if (!response.ok) {
                    throw new Error('Failed to add product to order');
                }

                const responseData = await response.json();
                console.log(responseData); // Log the response from the server
                alert('Product added to order successfully!');
                form.reset(); // Reset the form after successful submission
            } catch (error) {
                console.error('Error:', error.message);
                alert('Failed to add product to order. Please try again later.');
            }
        });
    </script>
</body>
</html>
